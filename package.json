{
  "name": "@aersosi/a11ytip",
  "version": "1.1.9",
  "type": "module",
  "description": "An accessible, customizable, css first tooltip system",
  "main": "dist/ToggleA11ytip.min.js",
  "style": "dist/a11ytip.min.css",
  "types": "dist/ToggleA11ytip.d.ts",
  "files": [
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./js": {
      "import": "./dist/ToggleA11ytip.min.js",
      "require": "./dist/ToggleA11ytip.min.js",
      "types": "./dist/ToggleA11ytip.d.ts",
      "default": "./dist/ToggleA11ytip.min.js"
    },
    "./css": {
      "default": "./dist/a11ytip.min.css"
    },
    "./dist/ToggleA11ytip.min.js": {
      "types": "./dist/ToggleA11ytip.d.ts",
      "default": "./dist/ToggleA11ytip.min.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "minify:js": "terser dist/ToggleA11ytip.js -o dist/ToggleA11ytip.min.js --compress --mangle",
    "minify:css": "lightningcss --minify --bundle --targets '>= 0.25%' src/a11ytip.css -o dist/a11ytip.min.css",
    "minify": "npm run minify:js && npm run minify:css",
    "build:prod": "npm run build && npm run minify",
    "pack": "npm pack",
    "unpack": "tar -xvzf aersosi-a11ytip-1.1.3.tgz"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "tooltip",
    "css",
    "typescript",
    "customizable",
    "aria",
    "dark-mode"
  ],
  "author": {
    "name": "Arthur Ersosi"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aersosi/a11ytip.git",
    "directory": "a11ytip"
  },
  "bugs": {
    "url": "https://github.com/aersosi/a11ytip/issues"
  },
  "homepage": "https://github.com/aersosi/a11ytip",
  "devDependencies": {
    "lightningcss-cli": "^1.30.1",
    "terser": "^5.19.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
